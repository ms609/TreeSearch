Package: TreeSearch
Title: Phylogenetic Analysis with Discrete Character Data
Version: 1.7.0
Authors@R: c(
    person(
      "Martin R.", 'Smith',
      email = "martin.smith@durham.ac.uk", 
      role = c("aut", "cre", "cph"), 
      comment = c(ORCID = "0000-0001-5660-1727")
    ),
